{
  "name": "jimeng-mcp",
  "version": "1.10.0",
  "description": "MCP server for JiMeng AI image and video generation with continue generation support",
  "author": "c-rick",
  "license": "MIT",
  "homepage": "https://github.com/c-rick/jimeng-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-rick/jimeng-mcp.git"
  },
  "keywords": [
    "mcp",
    "ai",
    "image-generation", 
    "video-generation",
    "jimeng",
    "typescript"
  ],
  "category": "ai-generation",
  "tools": [
    {
      "name": "generateImage",
      "description": "Generate AI images using JiMeng models with support for multiple images via continue generation",
      "inputSchema": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Text description for image generation"
          },
          "filePath": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Reference image paths (local or URL) for multi-reference image generation"
          },
          "model": {
            "type": "string",
            "enum": ["jimeng-4.0", "jimeng-3.0", "jimeng-2.1", "jimeng-2.0-pro", "jimeng-2.0", "jimeng-1.4", "jimeng-xl-pro"],
            "description": "JiMeng model to use"
          },
          "aspectRatio": {
            "type": "string",
            "enum": ["auto", "1:1", "16:9", "9:16", "3:4", "4:3", "3:2", "2:3", "21:9"],
            "description": "Image aspect ratio"
          },
          "sample_strength": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Reference image influence strength"
          },
          "negative_prompt": {
            "type": "string", 
            "description": "Negative prompt to avoid unwanted content"
          },
          "reference_strength": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "description": "Individual strength settings for multiple reference images"
          }
        },
        "required": ["prompt"]
      }
    },
    {
      "name": "generateVideo",
      "description": "Generate AI videos using JiMeng video models",
      "inputSchema": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Text description for video generation"
          },
          "filePath": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "First and last frame image paths (max 2 elements)"
          },
          "model": {
            "type": "string",
            "enum": ["jimeng-video-3.0-pro", "jimeng-video-3.0", "jimeng-video-2.0-pro", "jimeng-video-2.0"],
            "description": "JiMeng video model to use"
          },
          "resolution": {
            "type": "string",
            "enum": ["720p", "1080p"],
            "description": "Video resolution"
          },
          "width": {
            "type": "number",
            "description": "Video width in pixels"
          },
          "height": {
            "type": "number", 
            "description": "Video height in pixels"
          },
          "multiFrames": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "idx": {"type": "number"},
                "duration_ms": {"type": "number"},
                "prompt": {"type": "string"},
                "image_path": {"type": "string"}
              }
            },
            "description": "Multi-frame configuration for intelligent video generation"
          },
          "duration_ms": {
            "type": "number",
            "minimum": 3000,
            "maximum": 15000,
            "description": "Total video duration in milliseconds"
          },
          "fps": {
            "type": "number",
            "minimum": 12,
            "maximum": 30,
            "description": "Video frame rate"
          },
          "video_aspect_ratio": {
            "type": "string",
            "description": "Video aspect ratio (e.g., '16:9', '1:1', '9:16')"
          }
        },
        "required": ["prompt"]
      }
    }
  ],
  "resources": [
    {
      "name": "greeting",
      "description": "Personalized greetings",
      "uri": "greeting://{name}"
    },
    {
      "name": "server-info", 
      "description": "Server information",
      "uri": "info://server"
    },
    {
      "name": "jimeng-info",
      "description": "JiMeng AI service information",
      "uri": "jimeng-ai://info"
    }
  ],
  "environment": {
    "required": ["JIMENG_API_TOKEN"],
    "optional": []
  },
  "setup": {
    "instructions": "Get JIMENG_API_TOKEN from jimeng.jianying.com cookies (sessionid value)",
    "env_example": {
      "JIMENG_API_TOKEN": "your_jimeng_session_id_here"
    }
  },
  "features": [
    "Direct JiMeng API integration",
    "Multi-reference image generation", 
    "Continue generation for multiple images",
    "Image and video generation",
    "Intelligent multi-frame video mode",
    "Reference image blending",
    "Multiple model support",
    "Automatic credit management"
  ]
}